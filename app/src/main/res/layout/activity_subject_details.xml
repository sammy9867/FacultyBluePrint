<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout2">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_grey_border_bottom"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/PopupDetailsToolBar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/backArrowSubjectDetails"
                        android:src="@drawable/ic_back_arrow"/>

                    <TextView
                        android:layout_toRightOf="@+id/backArrowSubjectDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Subject Details"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:id="@+id/DetailsHeader"/>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayout2">

        <TextView
            android:id="@+id/tvNameOfSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="23dp"/>


        <TextView
            android:id="@+id/tvDescriptionOfSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameOfSubject"
            android:textSize="17sp"
            android:padding="20dp"/>

        <EditText
            android:layout_below="@+id/tvDescriptionOfSubject"
            android:id="@+id/etRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:padding="20dp"
            android:maxLength="4"/>

        <Button
            android:layout_below="@+id/etRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:padding="20dp"
            android:text="APPLY NOW"
            android:onClick="Apply_Click"/>

    </RelativeLayout>








</RelativeLayout>